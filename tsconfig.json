{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "types": [
      "vite/client",
      "@webgpu/types",
      "@types/dom-webcodecs"
    ],
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": "./",
    "allowJs": true,
    "paths": {
      "~src/*": [
        "src/*"
      ]
    },
  },
  "include": ["src"]
}